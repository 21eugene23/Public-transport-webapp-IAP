APP_NAME=PublicTransportApp
APP_ENV=local
APP_KEY=base64:GENERATE_THIS_USING_ARTISAN
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- Database (SQLite) ---
DB_CONNECTION=sqlite
DB_DATABASE=/home/larry/Documents/transport-systems/Public-transport-webapp-IAP/database/database.sqlite
DB_FOREIGN_KEYS=true

# --- Session ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# --- Cache ---
CACHE_STORE=database

# --- Queue ---
QUEUE_CONNECTION=database

# --- Mail ---
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- Redis (optional) ---
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- Filesystem ---
FILESYSTEM_DISK=local
